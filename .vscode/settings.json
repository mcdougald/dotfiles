{
	// Customize window title bar colors to identify this dotfiles project
	"workbench.colorCustomizations": {
		"titleBar.activeBackground": "#8b4caf",
		"titleBar.activeForeground": "#ffd700",
		"titleBar.inactiveBackground": "#5a2d6b",
		"titleBar.inactiveForeground": "#ffb347"
	},

	// File associations for common dotfiles
	"files.associations": {
		"*.zshrc": "shellscript",
		"*.bashrc": "shellscript",
		"*.bash_profile": "shellscript",
		".zshrc": "shellscript",
		".bashrc": "shellscript",
		".bash_profile": "shellscript",
		".gitconfig": "ini",
		".gitignore": "gitignore",
		"Brewfile": "ruby",
		"*.itermcolors": "xml",
		"*.icls": "xml"
	},

	// Editor settings
	"editor.trimAutoWhitespace": true,
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"editor.rulers": [80, 120],
	"editor.wordWrap": "on",
	"editor.formatOnSave": true,

	// Shell script specific settings
	"[shellscript]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"editor.defaultFormatter": "mkhl.shfmt",
		"editor.formatOnSave": true
	},

	"[ini]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},

	"[json]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"editor.formatOnSave": true
	},

	"[yaml]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"editor.formatOnSave": true
	},

	"[toml]": {
		"editor.tabSize": 2,
		"editor.insertSpaces": true
	},

	// File explorer settings
	"files.exclude": {
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},

	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/**": true,
		"**/.DS_Store": true
	},

	// Search settings
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		"**/.git": true,
		"**/.DS_Store": true,
		"**/dist": true,
		"**/build": true
	},

	// Terminal settings
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.fontSize": 12,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",

	// Git settings
	"git.enableSmartCommit": true,
	"git.confirmSync": false,
	"git.autofetch": true,
	"git.ignoreLimitWarning": true,

	// File encoding
	"files.encoding": "utf8",
	"files.eol": "\n",

	// Language settings
	"files.defaultLanguage": "plaintext",

	// Breadcrumbs
	"breadcrumbs.enabled": true,
	"breadcrumbs.filePath": "on",

	// Minimap
	"editor.minimap.enabled": true,
	"editor.minimap.maxColumn": 120
}
